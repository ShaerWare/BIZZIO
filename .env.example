# ===== APPLICATION SETTINGS =====
APP_NAME=bizzio.ru
APP_ENV=local
# APP_ENV=production
APP_KEY=
APP_DEBUG=true
# APP_DEBUG=false

# Local: http://localhost:8080
# Production: https://bizzio.ru
APP_URL=http://localhost:8080

APP_LOCALE=ru
APP_FALLBACK_LOCALE=ru
APP_FAKER_LOCALE=ru_RU
APP_TIMEZONE=Europe/Moscow

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ===== LOGGING =====
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===== DATABASE =====
DB_CONNECTION=pgsql
# Local (Docker): db
# Production: 127.0.0.1 or your DB host
DB_HOST=db
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=
DB_PASSWORD=

# ===== SESSION =====
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# Local: false, Production with HTTPS: true
SESSION_SECURE_COOKIE=false

# ===== CACHE & QUEUE =====
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=file
CACHE_DRIVER=file

# ===== REDIS (optional) =====
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===== AWS (optional) =====
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===== FRONTEND =====
VITE_APP_NAME="${APP_NAME}"
SCOUT_DRIVER=null

# ===== OAUTH: Google =====
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

# ===== OAUTH: VK ID (new API) =====
# Register app at: https://id.vk.com/about/business/go/docs/ru/vkid/latest/vk-id/intro/plan
VK_CLIENT_ID=
VK_CLIENT_SECRET=
VK_REDIRECT_URI=${APP_URL}/auth/vkid/callback

# ===== EMAIL (Unisender Go SMTP) =====
MAIL_MAILER=smtp
MAIL_HOST=go1.unisender.ru
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"
